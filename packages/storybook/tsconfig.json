{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@vite-mf-monorepo/home": ["../../apps/home/src"],
      "@vite-mf-monorepo/home/*": ["../../apps/home/src/*"],
      "@vite-mf-monorepo/ui": ["../../packages/ui/src"],
      "@vite-mf-monorepo/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src", ".storybook", "../../apps/home/src"],
  "exclude": ["node_modules", "dist"]
}
